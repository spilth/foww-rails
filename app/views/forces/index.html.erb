<p style="color: green"><%= notice %></p>

<h1>Forces</h1>

<div class="row">
  <div class="col-md-10">
    <table class="table table-borderless table-hover">
      <thead>
      <tr>
        <th>Name</th>
      </tr>
      </thead>

      <tbody>
      <% @forces.each do |force| %>
        <tr>
          <td><%= link_to force.name, force %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <%= link_to "New force", new_force_path, class: "btn btn-primary" %>
  </div>
</div>
