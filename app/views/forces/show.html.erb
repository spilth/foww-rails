<p style="color: green"><%= notice %></p>

<h1>Force: <%= @force.name %></h1>

<div class="row">
  <div class="col-md-8">
    <%= render @force %>

    <h2>Units</h2>

    <p>The follow Units can be a part of a <%= @force.name %> force:</p>

    <table class="table table-borderless table-hover">
      <thead>
      <tr>
        <th>Unit</th>
        <th>Cost</th>
      </tr>
      </thead>

      <tbody>
      <% @force.force_units.each do |force_unit| %>
        <tr>
          <td><%= link_to force_unit.unit.name, force_unit.unit %></td>
          <td><%= force_unit.cost %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h2>Actions</h2>

    <%= link_to "Edit this force", edit_force_path(@force), class: "btn btn-warning" %>
    <%= button_to "Destroy this force", @force, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
