<p style="color: green"><%= notice %></p>

<h1>Models</h1>

<table class="table table-borderless table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Image</th>
  </tr>
  </thead>

  <tbody>
  <% @models.each do |model| %>
    <tr>
      <td><%= link_to model.name, model %></td>
      <td><%= link_to image_tag(model.image.variant(resize_to_limit: [128, 128])), model %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New model", new_model_path, class: "btn btn-primary" %>
