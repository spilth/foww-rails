<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active">Models</li>
  </ol>
</nav>

<h1>Models</h1>

<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-md-10">
    <table class="table table-borderless table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Sprue ID</th>
        <th>Image</th>
      </tr>
      </thead>

      <tbody>
      <% @models.each do |model| %>
        <tr>
          <td><%= link_to model.name, model %></td>
          <td><%= model.sprue_id %></td>
          <td><%= link_to image_tag(model.image.variant(resize_to_limit: [128, 128]), height: 128), model if model.image.attached? %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <%= link_to "New model", new_model_path, class: "btn btn-primary" %>
  </div>
</div>
