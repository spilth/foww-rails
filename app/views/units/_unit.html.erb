<div id="<%= dom_id unit %>">
  <p>
    <strong>Wave:</strong>
    <%= unit.wave %>
  </p>

  <p>
    <% if unit.unique %>
      <strong>Unique</strong>
    <% end %>
  </p>

  <p>
    <%= move_icon(unit.move) %>
    <%= charge_icon(unit.charge) %>
  </p>

  <p>
    <strong>STR:</strong>
    <%= unit.strength %>
  </p>

  <p>
    <strong>PER:</strong>
    <%= unit.perception %>
  </p>

  <p>
    <strong>END:</strong>
    <%= unit.endurance %>
  </p>

  <p>
    <strong>CHA:</strong>
    <%= unit.charisma %>
  </p>

  <p>
    <strong>INT:</strong>
    <%= unit.intelligence %>
  </p>

  <p>
    <strong>AGI:</strong>
    <%= unit.agility %>
  </p>

  <p>
    <strong>LUC:</strong>
    <%= unit.luck %>
  </p>

  <p>
    <i class="fa-solid fa-shield-halved"></i>
    <%= unit.physical_armor %><%= "+#{unit.physical_strong_armor_bonus}" if unit.physical_strong_armor_bonus %>
  </p>

  <p>
    <i class="fa-solid fa-bolt-lightning"></i>
    <%= unit.energy_armor %><%= "+#{unit.energy_strong_armor_bonus}" if unit.energy_strong_armor_bonus %>
  </p>

  <p>
    <i class="fa-solid fa-radiation"></i>
    <%= "X" if unit.radiation_immunity %>
    <%= unit.radiation_armor if !unit.radiation_immunity %>
  </p>

</div>
