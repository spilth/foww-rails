<%= form_with(model: unit) do |form| %>
  <% if unit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
        <% unit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3 mb-4">
    <div class="col-md-2">
      <div class="form-check form-switch">
        <%= form.check_box :unique, class: "form-check-input" %>
        <%= form.label :unique, class: "form-check-label" %>
      </div>
    </div>
  </div>

  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <h2>Movement</h2>

  <div class="row g-3 mb-4">
    <div class="col-md-2">
      <%= form.label :move_range, class: "form-label" %>
      <%= form.select(:move_range, range_options, { include_blank: true }, { class: "form-select" }) %>
    </div>

    <div class="col-md-2">
      <%= form.label :charge_range, class: "form-label" %>
      <%= form.select(:charge_range, range_options, { include_blank: true }, { class: "form-select" }) %>
    </div>
  </div>

  <h2>S.P.E.C.I.A.L.</h2>

  <div class="row g-3 mb-4">
    <div class="col-md-2">
      <%= form.label :strength, class: "form-label" %>
      <%= form.number_field :strength, class: "form-control", min: 1, max: 20 %>
    </div>

    <div class="col-md-2">
      <%= form.label :perception, class: "form-label" %>
      <%= form.number_field :perception, class: "form-control", min: 1, max: 20 %>
    </div>

    <div class="col-md-2">
      <%= form.label :endurance, class: "form-label" %>
      <%= form.number_field :endurance, class: "form-control", min: 1, max: 20 %>
    </div>

    <div class="col-md-2">
      <%= form.label :charisma, class: "form-label" %>
      <%= form.number_field :charisma, class: "form-control", min: 1, max: 20 %>
    </div>

    <div class="col-md-2">
      <%= form.label :intelligence, class: "form-label" %>
      <%= form.number_field :intelligence, class: "form-control", min: 1, max: 20 %>
    </div>

    <div class="col-md-2">
      <%= form.label :agility, class: "form-label" %>
      <%= form.number_field :agility, class: "form-control", min: 1, max: 20 %>
    </div>

    <div class="col-md-2">
      <%= form.label :luck, class: "form-label" %>
      <%= form.number_field :luck, class: "form-control", min: 1, max: 20 %>
    </div>
  </div>

  <h2>Skill Attributes</h2>

  <div class="row g-3 mb-4">
    <div class="col-md-2">
      <%= melee_skill_icon %>
      <%= form.label :melee_attribute, "Melee", class: "form-label" %>
