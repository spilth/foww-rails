  </div>

  <div class="col-md-2">
    <%= form.label :physical_strong_armor_bonus, class: "form-label" %>
    <%= form.number_field :physical_strong_armor_bonus, class: "form-control", min: 1, max: 10 %>
  </div>

  <div class="col-md-2">
    <%= form.label :energy_armor, class: "form-label" %>
    <%= form.number_field :energy_armor, class: "form-control", min: 0, max: 10 %>
  </div>

  <div class="col-md-2">
    <%= form.label :energy_strong_armor_bonus, class: "form-label" %>
