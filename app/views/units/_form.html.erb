  <h2>Armor</h2>

  <div class="row g-3 mb-4">
    <div class="col-md-2">
      <%= form.label :physical_armor, "Physical", class: "form-label" %>
      <%= form.number_field :physical_armor, class: "form-control", min: 0, max: 10 %>
