    <%= form.label :radiation_immunity, class: "form-label" %>
    <%= form.check_box :radiation_immunity, class: "form-control form-check-input" %>
  </div>

  <div class="col-md-2">
    <%= form.label :radiation_armor, class: "form-label" %>
    <%= form.number_field :radiation_armor, class: "form-control", min: 0, max: 10 %>
  </div>

  <div class="col-md-2">
    <%= form.label :throw_range, class: "form-label" %>
    <%= form.select(:throw_range, range_options, { include_blank: true}, { class: "form-select" }) %>
  </div>

  <div class="col-md-2">
    <%= form.label :presence_range, class: "form-label" %>
