<p style="color: green"><%= notice %></p>

<h1><%= @unit.name %></h1>

<div class="row">
  <div class="col-md-8">
    <h2>Unit Card</h2>
    <%= render @unit %>
  </div>
  <div class="col-md-4">
    <h2>Additional Data</h2>

    <p>
      <strong>Wave:</strong>
      <%= @unit.wave %>
    </p>

    <h3>Models</h3>

    <% @unit.models.each do |model| %>
      <%= link_to image_tag(model.image.variant(resize_to_limit: [256, 256]), class: "img"), model %>
    <% end %>
  </div>
</div>


<div>
  <%= link_to "Edit this unit", edit_unit_path(@unit), class: "btn btn-warning" %>
  <%= button_to "Destroy this unit", @unit, method: :delete, class: "btn btn-danger" %>
</div>
