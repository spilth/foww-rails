<p style="color: green"><%= notice %></p>

<h1>Type: <%= @type.name %></h1>

<div class="row">
  <div class="col-md-10">
    <%= render @type %>

    <% if @type.units.present? %>
      <h2>Units</h2>

      <p>The following Units are of the type <%= @type.name %>:</p>

      <ul>
        <% @type.units.order(:name).each do |unit| %>
          <li><%= link_to unit.name, unit %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-md-2">
    <%= link_to "Edit this type", edit_type_path(@type), class: "btn btn-warning" %>
    <%= button_to "Destroy this type", @type, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
