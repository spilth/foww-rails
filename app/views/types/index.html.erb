<p style="color: green"><%= notice %></p>

<h1>Types</h1>

<div class="row">
  <div class="col-md-10">
    <table class="table table-borderless table-hover">
      <thead>
      <tr>
        <th>Name</th>
      </tr>
      </thead>
      <tbody>
      <% @types.each do |type| %>
        <tr>
          <td>
            <%= link_to type.name, type %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <%= link_to "New type", new_type_path, class: "btn btn-primary" %>
  </div>
</div>


