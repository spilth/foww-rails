<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/products/">Products</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @product.name %></li>
  </ol>
</nav>

<h1><%= @product.name %></h1>

<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-md-8">
    <%= render @product %>
  </div>
  <div class="col-md-4">
    <h2>Additional Data</h2>

    <p><b>Wave:</b> <%= @product.wave %></p>
    <p><b>Packaging ID:</b> <%= @product.packaging_id %></p>

    <% if @product.models.present? %>
      <h2>Models</h2>

      <p><%= @product.name %> includes the following models:</p>

      <% @product.models.order(:name).each do |model| %>
        <figure class="figure">
          <%= link_to image_tag(model.image.variant(resize_to_limit: [128, 128]), class: "figure-img img-fluid rounded"), model if model.image.attached? %>

          <figcaption class="figure-caption"><%= link_to model.name, model %></figcaption>
        </figure>
      <% end %>
    <% end %>

    <h2>Actions</h2>

    <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-warning" %>
    <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %>
  </div>
</div>

